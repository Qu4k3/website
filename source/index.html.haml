.row-fluid.space
  .hero-unit.logo
    %p
      = image_tag 'ri-logo.png', alt: 'RailsInstaller logo'
    %h1.tagline= t 'welcome.index.get_to_work'
.row-fluid.space
  .span6
    %h2= t 'welcome.index.what'
    %p= t 'welcome.index.what_description'
  .span6
    %h2= t 'welcome.index.who'
    %p= t 'welcome.index.who_description'
.row-fluid.space
  .span8.offset2.video_container
    %iframe.img-polaroid{ src: 'http://www.youtube.com/embed/InKZOPylUSQ', frameborder: '0', allowfullscreen: true }
.row-fluid
  .span12
    .row-fluid
      .span12.alert.alert-error= t 'welcome.index.osx_warning'
    .row-fluid
      .span6
        %h2= t 'welcome.index.win_downloads'
      .span6
        %h2= t 'welcome.index.mac_downloads'
    .row-fluid
      = partial 'download_btn', 
        locals: { down_link: 'https://s3.amazonaws.com/railsinstaller/Windows/railsinstaller-2.3.3.exe', 
                  platform: 'win', 
                  down_version: 'ruby_19' }
      .span3
      = partial 'download_btn',
        locals: { down_link: 'https://s3.amazonaws.com/railsinstaller/OSX/RailsInstaller-1.0.4-osx-10.7.app.tgz',
                  platform: 'mac',
                  down_version: 'mac_ver_new' }
      = partial 'download_btn',
        locals: { down_link: 'https://s3.amazonaws.com/railsinstaller/OSX/RailsInstaller-1.0.4-osx-10.6.app.tgz',
                  platform: 'mac',
                  down_version: 'mac_ver_old' }
      .row-fluid
        .span3
          .packages
            %small= t 'welcome.index.packages_included'
            %ul.unstyled
              %li
                = link_to t('welcome.index.ruby'), 'http://www.ruby-lang.org'
                = t 'welcome.index.ruby_ver_new'
              %li
                = link_to t('welcome.index.rails'), 'http://rubyonrails.org/'
                = t 'welcome.index.rails_ver_new'
              %li= link_to t('welcome.index.bundler'), 'http://gembundler.com'
              %li= link_to t('welcome.index.git'), 'http://git-scm.com'
              %li= link_to t('welcome.index.sqlite'), 'http://sqlite.org'
              %li= link_to t('welcome.index.tinyTDS'), 'https://github.com/rails-sqlserver/tiny_tds'
              %li= link_to t('welcome.index.sql_support'), 'https://github.com/rails-sqlserver/activerecord-sqlserver-adapter'
              %li= link_to t('welcome.index.devkit'), 'https://github.com/oneclick/rubyinstaller/wiki/Development-Kit'
        .span3
        .span6
          .packages
            %small= t 'welcome.index.packages_included'
            %ul.unstyled
              %li
                = link_to t('welcome.index.ruby'), 'http://www.ruby-lang.org'
                = t 'welcome.index.ruby_ver_new'
              %li
                = link_to t('welcome.index.rails'), 'http://rubyonrails.org'
                = t 'welcome.index.rails_ver_new'
              %li= link_to t('welcome.index.bundler'), 'http://gembundler.com'
              %li= link_to t('welcome.index.git'), 'http://git-scm.com/'
              %li= link_to t('welcome.index.sqlite'), 'http://sqlite.org/'
              %li= link_to t('welcome.index.osx_gcc_installer'), 'https://github.com/kennethreitz/osx-gcc-installer'
              %li= link_to t('welcome.index.jewerlybox'), 'http://unfiniti.com/software/mac/jewelrybox'
              %li= link_to t('welcome.index.rvm'), 'https://rvm.io/'
              %li= link_to t('welcome.index.sm_framework'), 'https://smf.sh/'
      .row-fluid
        .span12.alert.alert-info
          %strong= t 'welcome.index.osx_note'
          = t 'welcome.index.osx_note_description'
      .row-fluid
        .span12.alert.alert-light.alert-shadow
          = t 'welcome.index.last_version_download_preffix'
          = link_to t('welcome.index.last_version_download'), 'https://github.com/railsinstaller/railsinstaller-windows/releases/download/3.0.0-alpha.2/railsinstaller-3.0.0.exe', style: 'color: rgb(75, 179, 209);'
          = t 'welcome.index.last_version_download_suffix'
  .row-fluid.space
    .span12
      %h2= t 'welcome.index.next'
      %p
        = t 'welcome.index.rails_guides_preffix'
        = link_to t('welcome.index.rails_guides'), t('welcome.index.rails_guides_url', default: 'http://guides.rubyonrails.org')
        = t 'welcome.index.rails_guides_suffix'
      %p
        = t 'welcome.index.rails_tutorial_preffix'
        = link_to t('welcome.index.rails_tutorial'), 'http://railstutorial.org'
        = t 'welcome.index.rails_tutorial_suffix'
      %p
        = t 'welcome.index.google_group_preffix'
        = link_to t('welcome.index.google_group'), 'http://groups.google.com/group/railsinstaller'
        = t 'welcome.index.google_group_suffix'
        = t 'welcome.index.github_preffix'
        = link_to t('welcome.index.github'), 'http://github.com/railsinstaller'
        = t 'welcome.index.repositories_preffix'
        = link_to t('welcome.index.win_repository'), 'http://github.com/railsinstaller/railsinstaller-windows/issues'
        = t 'welcome.index.or'
        = link_to t('welcome.index.nix_repository'), 'http://github.com/railsinstaller/railsinstaller-nix/issues'
        = t 'welcome.index.repositories_suffix'
        = t 'welcome.index.freenode_preffix'
        = link_to t('welcome.index.freenode'), 'http://webchat.freenode.net/#railsinstaller'
        = t 'welcome.index.freenode_suffix'
